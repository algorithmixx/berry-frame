# use sudo crontab -e
# and add the following line to the crontab
# @reboot /home/pi/berries/onreboot <your berry>


cd /home/pi/berries

PATH=$PATH:/usr/local/bin:/sbin

mkdir -p log log/old
rm -f log/old/* > /dev/null
mv log/*.* log/old > /dev/null

# start the monitoring script
echo starting monitor ..
./monitor 1>log/monitor.log 2>log/monitor.err &
chmod 666 log/monitor.err log/monitor.log

# start Master
echo starting Master ..
./berry Master  1>log/Master.log 2>log/Master.err &
chown pi:pi log/Master.log log/Master.err

for berry in $*
do
	echo "starting $berry .."
	# start $berry
	./berry $berry 1>log/$berry.log 2>log/$berry.err &
	chmod 666 log/$berry.err log/$berry.log
done
